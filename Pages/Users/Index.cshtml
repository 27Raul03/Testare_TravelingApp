@page
@model Testare_TravelingApp.Pages.Users.IndexModel

@{
    ViewData["Title"] = @Model._localizer["Title_Users"];
}

<h1>@Model._localizer["Title_Users"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Model._localizer["Column_Email"]</th>
            <th>@Model._localizer["Column_Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.UserList)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @if (user.Email == Model.CurrentUserEmail)
                    {
                        <form method="post" asp-page-handler="Delete" asp-route-id="@user.UserId" style="display:inline;">
                            <button type="submit" class="btn btn-danger">
                                @Model._localizer["Button_Delete"]
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
