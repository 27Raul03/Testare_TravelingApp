@page
@model Testare_TravelingApp.Pages.Agendas.IndexModel

@{
    ViewData["Title"] = Model.YourAgenda;
}

<h1>@Model.YourAgenda</h1>

<p>
    <a asp-page="Create" class="btn" style="background-color: lightblue;">@Model.AddActivityButon</a>
</p>

<div class="row">
    <hr />
    @foreach (var item in Model.Agenda)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5>@item.Title</h5>
                </div>
                <p class="card-body">
                <p class="card-text mt-1">
                    <strong>@Model.CreatedAt</strong>
                    <span class="text-muted">@item.DateCreated.ToString("MMMM dd, yyyy")</span>
                </p>
                <p class="card-text mt-3">
                    <strong>@Model.CreatedBy</strong> @item.User.Email
                </p>
                <p>
                        @if (item.Activity != null)
                        {
                        <span class="badge" style="background-color: #c4c1e0;">
                                @Model.Activity @item.Activity.Name<br />
                                @Model.StartingAt: @item.Activity.StartDate
                        </span>
                        }
                        @if (item.Restaurant != null)
                        {
                        <span class="badge" style="background-color: #c7b198;">
                                @Model.Restaurant: @item.Restaurant.Name
                        </span>
                        }
                        @if (item.NatureTrail != null)
                        {
                        <span class="badge" style="background-color: #ffa952;">
                                @Model.NatureTrail: @item.NatureTrail.Name
                        </span>
                        }
                        @if (item.TouristAttraction != null)
                        {
                        <span class="badge" style="background-color: #ddeedf;">
                                @Model.Attraction: @item.TouristAttraction.Name
                        </span>
                        }
                </p>
                </p>
                <div class="card-footer text-end">
                    <a asp-page="./Edit" asp-route-id="@item.AgendaId" class="btn btn-sm" style="background-color: pink;">
                        @Model.Edit
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.AgendaId" class="btn btn-sm" style="background-color: sandybrown;">
                        @Model.Details
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.AgendaId" class="btn btn-danger btn-sm">
                        @Model.Delete
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Agenda.Any())
{
    <p>@Model.NoAgendasFound</p>
}
