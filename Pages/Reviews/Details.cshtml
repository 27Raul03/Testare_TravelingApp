@page
@model Testare_TravelingApp.Pages.Reviews.DetailsModel

@{
    ViewData["Title"] = "Review Details";
}

<h1>Review Details</h1>

<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Rating)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Comment)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.DatePosted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.DatePosted)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.User.Email)
        </dd>

        <!-- Afișează activitatea dacă este selectată -->
        @if (Model.Review.Activity != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.Activity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.Activity.Name)
            </dd>
        }

        <!-- Afișează restaurantul dacă este selectat -->
        @if (Model.Review.Restaurant != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.Restaurant)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.Restaurant.Name)
            </dd>
        }

        <!-- Afișează atracția turistică dacă este selectată -->
        @if (Model.Review.TouristAttraction != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.TouristAttraction)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.TouristAttraction.Name)
            </dd>
        }

        <!-- Afișează traseul de natură dacă este selectat -->
        @if (Model.Review.NatureTrail != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.NatureTrail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.NatureTrail.Name)
            </dd>
        }
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Review.ReviewId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
