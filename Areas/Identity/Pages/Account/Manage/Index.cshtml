@page
@model IndexModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Testare_TravelingApp.Resources> _localizer

@{
    // Înlocuiești "Profile" cu cheie din resurse
    ViewData["Title"] = _localizer["Title_Profile"];
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Username"
                       class="form-control"
                       placeholder="@_localizer["Placeholder_Username"]"
                       disabled />
                <label asp-for="Username" class="form-label">
                    @_localizer["Label_Username"]
                </label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber"
                       class="form-control"
                       placeholder="@_localizer["Placeholder_PhoneNumber"]" />
                <label asp-for="Input.PhoneNumber" class="form-label">
                    @_localizer["Label_PhoneNumber"]
                </label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button"
                    type="submit"
                    class="w-100 btn btn-lg btn-primary">
                @_localizer["Button_Save"]
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
