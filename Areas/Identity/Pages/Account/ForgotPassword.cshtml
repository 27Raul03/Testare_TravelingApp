@page
@model ForgotPasswordModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Testare_TravelingApp.Resources> _localizer

@{
    // Înlocuim "Forgot your password?" cu localizare
    ViewData["Title"] = _localizer["Title_ForgotPassword"];
}

<h1>@ViewData["Title"]</h1>
<h2>@_localizer["Heading_EnterYourEmail"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email"
                       class="form-control"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="@_localizer["Placeholder_Email"]" />
                <label asp-for="Input.Email" class="form-label">
                    @_localizer["Label_Email"]
                </label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">
                @_localizer["Button_ResetPassword"]
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
