@page
@model Testare_TravelingApp.Pages.TouristAttractions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Attractions</h1>

<p>
    <a asp-page="Create" class="btn" style="background-color: lightblue;">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TouristAttraction[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TouristAttraction[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TouristAttraction[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TouristAttraction[0].OpeningHours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TouristAttraction) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningHours)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.TouristAttractionId" class="btn btn-sm" style="background-color: pink;">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.TouristAttractionId" class="btn btn-sm" style="background-color: sandybrown;">Details</a>
                <a asp-page="./Delete" asp-route-id="@item.TouristAttractionId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
