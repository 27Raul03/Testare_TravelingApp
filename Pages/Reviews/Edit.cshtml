@page
@model Testare_TravelingApp.Pages.Reviews.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.ReviewId" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Review.Rating" class="control-label"></label>
                <input asp-for="Review.Rating" class="form-control" min="1" max="5" type="number" />
                <span asp-validation-for="Review.Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Review.Comment" class="control-label"></label>
                <input asp-for="Review.Comment" class="form-control" />
                <span asp-validation-for="Review.Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Review.DatePosted" class="control-label"></label>
                <input asp-for="Review.DatePosted" class="form-control" readonly/>
                <span asp-validation-for="Review.DatePosted" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Review.UserId" class="control-label"></label>
                <select asp-for="Review.UserId" class="form-control" asp-items="ViewBag.UserId">
                    <option value="">Please select...</option>
                </select>
                <span asp-validation-for="Review.UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Review.ActivityId" class="control-label"></label>
                <select asp-for="Review.ActivityId" class="form-control" asp-items="ViewBag.ActivityId">
                    <option value="">Please select...</option>
                </select>
                <span asp-validation-for="Review.ActivityId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Review.RestaurantId" class="control-label"></label>
                <select asp-for="Review.RestaurantId" class="form-control" asp-items="ViewBag.RestaurantId">
                    <option value="">Please select...</option>
                </select>
                <span asp-validation-for="Review.RestaurantId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Review.NatureTrailId" class="control-label"></label>
                <select asp-for="Review.NatureTrailId" class="form-control" asp-items="ViewBag.NatureTrailId">
                    <option value="">Please select...</option>
                </select>
                <span asp-validation-for="Review.NatureTrailId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Review.TouristAttractionId" class="control-label"></label>
                <select asp-for="Review.TouristAttractionId" class="form-control" asp-items="ViewBag.TouristAttractionId">
                    <option value="">Please select...</option>
                </select>
                <span asp-validation-for="Review.TouristAttractionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
