@page
@model Testare_TravelingApp.Pages.Activities.DetailsModel

@{
    ViewData["Title"] = Model._localizer["Title_Details"];
}

<h1>@Model._localizer["Title_Details"]</h1>

<div>
    <h4>@Model._localizer["Label_Activity"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Model._localizer["ActivityName"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.Name)
        </dd>
        <dt class="col-sm-2">
            @Model._localizer["ActivityDescription"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.Description)
        </dd>
        <dt class="col-sm-2">
            @Model._localizer["ActivityLocation"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.Location)
        </dd>
        <dt class="col-sm-2">
            @Model._localizer["ActivityStartDate"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Model._localizer["ActivityEndDate"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.EndDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Activity.ActivityId" class="btn btn-warning">
        @Model._localizer["Button_Edit"]
    </a> |
    <a asp-page="./Index" class="btn btn-primary">
        @Model._localizer["Button_BackToList"]
    </a>
</div>
