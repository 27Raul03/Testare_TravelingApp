@page
@model Testare_TravelingApp.Pages.Restaurants.DeleteModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Testare_TravelingApp.Resources> _localizer

@{
    ViewData["Title"] = _localizer["Title_DeleteRestaurant"];
}

<h1>@Model._localizer["Title_DeleteRestaurant"]</h1>

<h3>@Model._localizer["Heading_DeleteConfirmation"]</h3>
<div>
    <h4>@Model._localizer["Label_Restaurant"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Model._localizer["Column_Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.Name)
        </dd>

        <dt class="col-sm-2">
            @Model._localizer["Column_Address"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.Address)
        </dd>

        <dt class="col-sm-2">
            @Model._localizer["Column_PhoneNumber"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.PhoneNumber)
        </dd>

        <dt class="col-sm-2">
            @Model._localizer["Column_Cuisine"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.Cuisine)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Restaurant.RestaurantId" />
        <input type="submit" value="@Model._localizer["Button_Delete"]" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">
            @Model._localizer["Button_BackToList"]
        </a>
    </form>
</div>
