@page
@model Testare_TravelingApp.Pages.NatureTrails.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Nature Trails</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NatureTrail[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NatureTrail[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NatureTrail[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NatureTrail[0].LengthInKm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.NatureTrail) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LengthInKm)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.NatureTrailId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.NatureTrailId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.NatureTrailId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
